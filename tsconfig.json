{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"],
      "examples/*": ["examples/*"]
    }
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
